<?php $_stores = Mage::getModel('stores/stores')->getCollection(); ?>
<div class="block block-stores">
    <div class="block-title">
        <strong><span><?php echo $this->__('Where to Find Us') ?></span></strong>
    </div>
    <div class="block-content box">
        <dl id="narrow-by-list2">
			<dt></dt>
            <dd id="list_stores">
                <ol>
                <?php foreach ($_stores as $_store): ?>
                    <li>
						<?php
							$city = $_store->getCity();
						
						?>
                        <a href="<?php echo $this->getBaseUrl(); ?>stores?city=<?php echo $city; ?>"><?php echo $this->escapeHtml($_store->getCity()) ?></a>
                    </li>
                <?php endforeach ?>
                </ol>
            </dd>
        </dl>
    </div>
</div>
